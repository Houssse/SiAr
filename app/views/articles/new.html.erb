<h1> New artilce </h1>

<%= form_with(model: @article, local: true) do |f| %>

  <div>
    <%= f.label :title  %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <%= f.submit 'Create Article' %>
<% end %>

<%= link_to 'Back', root_path %>