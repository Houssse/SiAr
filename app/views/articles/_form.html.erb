<div class="container my-4">
  <%= form_with(model: @article, local: true, html: { class: "form" }) do |f| %>

    <%= render 'shared/error_messages', object: @article %>

    <div class="mb-3">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control", placeholder: "Enter title" %>
    </div>

    <div class="mb-3">
      <%= f.label :content, class: "form-label" %>
      <%= f.rich_text_area :content, class: "form-control", placeholder: "Enter content" %>
    </div>

    <div class="mb-3">
      <%= f.submit "Create Article", class: "btn btn-primary me-2" %>
      <%= link_to 'Back', root_path, class: "btn btn-light" %>
    </div>
    
  <% end %>
</div>
